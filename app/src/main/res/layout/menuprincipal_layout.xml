<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">


    <Button
        android:id="@+id/btnCadastroProdutos"
        android:layout_width="match_parent"
        android:layout_height="110sp"
        android:layout_alignParentStart="true"
        android:width="180sp"
        android:gravity="bottom|center"
        android:onClick="AbreCadastroProdutos"
        android:text="Cadastro de Produtos"
        android:textColor="@color/colorBranco"
        android:textSize="20sp"
        android:textStyle="bold"
        android:drawableTop="@mipmap/ic_produto"/>

    <Button
        android:id="@+id/btnProdutos"
        android:layout_width="match_parent"
        android:layout_height="110sp"
        android:width="180sp"
        android:gravity="bottom|center"
        android:onClick="ListaCadastrados"
        android:text="Produtos Cadastrados"
        android:textColor="@color/colorBranco"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/btnCadastroProdutos"
        android:layout_alignParentStart="true"
        android:drawableTop="@mipmap/ic_logotipo2"/>


    <Button
        android:id="@+id/btnProduzir"
        android:layout_width="match_parent"
        android:layout_height="110sp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnProdutos"
        android:width="180sp"
        android:drawableTop="@mipmap/ic_produzir2"
        android:gravity="bottom|center"
        android:onClick="ProduzirProdutos"
        android:text="Produzir/Calcular"
        android:textColor="@color/colorBranco"
        android:textSize="20sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btnProduzidos"
        android:layout_width="match_parent"
        android:layout_height="110sp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnProduzir"
        android:width="180sp"
        android:drawableTop="@mipmap/ic_produzidos"
        android:gravity="bottom|center"
        android:onClick="ListaProduzidos"
        android:text="Calculados"
        android:textColor="@color/colorBranco"
        android:textSize="20sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btnUsuarios"
        android:layout_width="200dp"
        android:layout_height="125sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:width="200sp"
        android:gravity="bottom|center"
        android:onClick="AbrirCadastroUsuario"
        android:text="Meus Dados"
        android:textColor="@color/colorBranco"
        android:textSize="22sp"
        android:textStyle="bold"
        android:drawableTop="@mipmap/ic_barman"/>


    <Button
        android:id="@+id/btnSair"
        android:layout_width="170dp"
        android:layout_height="125sp"
        android:layout_alignBottom="@+id/btnUsuarios"
        android:layout_alignParentEnd="true"
        android:width="200sp"
        android:gravity="bottom|center"
        android:onClick="FinalizarAplicacao"
        android:text="Sair"
        android:textColor="@color/colorBranco"
        android:textSize="22sp"
        android:textStyle="bold"
        android:drawableTop="@mipmap/ic_sair"/>


</RelativeLayout>
