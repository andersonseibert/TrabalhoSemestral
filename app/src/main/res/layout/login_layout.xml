<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <TextView
        android:id="@+id/textViewtITULO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:text="Sistema de Produção"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edtLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Make Drink"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="50sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonIniciar"
        style="@android:style/Widget.DeviceDefault.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="53dp"
        android:layout_weight="0.10"
        android:elevation="17dp"
        android:text="Iniciar"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:onClick="FazerLogin"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edtSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonIniciar"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="75dp"
        android:layout_marginEnd="68dp"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textViewSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senha:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:layout_alignBaseline="@+id/edtSenha"
        android:layout_alignBottom="@+id/edtSenha"
        android:layout_toStartOf="@+id/textView5" />

    <TextView
        android:id="@+id/textViewUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edtSenha"
        android:layout_alignStart="@+id/textViewSenha"
        android:layout_marginBottom="20dp"
        android:text="Usuário:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edtLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewUsuario"
        android:layout_alignBottom="@+id/textViewUsuario"
        android:layout_alignStart="@+id/edtSenha"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:text="© All rights reserved"
        android:textColor="?attr/actionMenuTextColor" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/buttonIniciar"
        android:layout_below="@+id/edtSenha"
        android:layout_marginTop="17dp"
        android:onClick="AbrirCadastroUsuario"
        android:text="Novo usuário"
        android:textColor="@android:color/holo_blue_dark" />

</RelativeLayout>
